# VoiceToDoc Backend Konfiguration
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# API-SchlÃ¼ssel (ERFORDERLICH)
LLM_API_KEY=your_openai_api_key_here

# Whisper-Konfiguration
WHISPER_MODEL=base
WHISPER_DEVICE_CUDA=cuda
MAX_WORKERS=3

# LLM-Konfiguration
LLM_MODEL=gpt-4o
LLM_MODEL_LIGHT=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Datenbank
STORAGE_TYPE=sql
DB_TYPE=sqlite
DB_PATH=data/templates.db

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=20
